set -eo pipefail

function fail() {
  echo -e "\e[31mFail:\e[m $* ðŸ˜­"
  exit 1
}

function install_rlwrap() {
  local install_type=$1
  local version=$2
  local install_path=$3

  if [ "$install_type" != "version" ]; then
    fail "asdf-rlwrap supports release installs only"
  fi

  local download_url="https://github.com/hanslub42/rlwrap/archive/v${version}.tar.gz"
  local file_name="rlwrap-${version}.tar.gz"
  local tmp_download_dir
  tmp_download_dir=$(mktemp -d -t rlwrap_tmp_XXXXXX)

  local source_path="${tmp_download_dir}/${file_name}"
  local distination="${tmp_download_dir}/dist"

  (
    echo "âˆ— Downloading rlwrap source..."
    curl --silent --location --create-dirs --output "$source_path" "$download_url" || fail "Could not download rlwrap $version"
    mkdir -p "$distination"
    tar zxf "$source_path" -C "$distination" --strip-components=1
    cd "$distination"

    echo "âˆ— Recreating configure file..."
    autoreconf --install 2>/dev/null || fail "Could not recreate configure file"

    echo "âˆ— Configuring..."
    case "$OSTYPE" in
      darwin*)
        CPPFLAGS="-I$(brew --prefix readline)/include" \
        CFLAGS="-I$(brew --prefix readline)/include" \
        LDFLAGS="-L$(brew --prefix readline)/lib" \
          ./configure --prefix="$install_path" >/dev/null || fail "Could not configure"
        ;;
      linux*)
        ./configure --prefix="$install_path" >/dev/null || fail "Could not configure"
        ;;
      *)
        fail "Unsupported platform..."
        ;;
    esac

    echo "âˆ— Compiling..."
    make &>log.make || fail "Could not compile"

    echo "âˆ— Installing..."
    make install >/dev/null || fail "Could not install"

    echo "The installation was successful!"
  ) || (
    rm -rf "$install_path"
    fail "An error occurred"
  )

  rm -rf "$tmp_download_dir"
}

install_rlwrap "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
